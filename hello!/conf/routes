# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# WebServices
GET     /listeBatimentsXML                      Application.listeBatiments(format:'xml')
GET     /listeBatimentsJSON                     Application.listeBatiments(format:'json')
GET     /batiment/{id}                          Application.batimentById(format:'xml')
GET     /batiment/{id}                          Application.batimentById(format:'json')


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import CRUD routes
*      /admin                                   module:crud
# Import Secure routes
*      /                                        module:secure
